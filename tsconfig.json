{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2022", "dom"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "dist",
    "test-files",
    "node_modules",
    "cdk.out",
    "test/aws-website/angular-website",
    "test/aws-lambda/typescript-lambda"
  ]
}
